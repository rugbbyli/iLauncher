<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/new_folder_fragment_height"
    android:background="@android:color/black"
    tools:context="rugbbyli.ilauncher.NewFolderFragment">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frag_new_folder_edit_name"
        android:layout_gravity="top"
        android:focusableInTouchMode="true"
        android:text="新建文件夹"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:lines="1"
        android:paddingLeft="10dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingRight="0dp"
        android:layout_margin="0dp"
        android:background="@drawable/folder_open"
        android:focusable="true"
        android:singleLine="true"
        android:maxLength="9"
        android:editable="true"
        android:enabled="true"
        android:inputType="text"
        android:selectAllOnFocus="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/frag_new_folder_btn_ok"
        android:scaleType="centerCrop"
        android:background="@drawable/ok"
        android:layout_marginRight="60dp"
        android:onClick="newFolderPop_buttonOk_Click"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/frag_new_folder_btn_cancle"
        android:layout_gravity="right"
        android:scaleType="centerCrop"
        android:layout_marginRight="5dp"
        android:background="@drawable/cancel"
        android:onClick="newFolderPop_buttonCancel_Click"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
</FrameLayout>
