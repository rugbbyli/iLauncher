<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="rugbbyli.ilauncher.AppListActivity"
    android:gravity="fill"
    android:padding="0dp"
    android:id="@+id/applist_layout">

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridViewAppList"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:numColumns="4"
        android:choiceMode="none"
        android:verticalSpacing="15dip"
        android:horizontalSpacing="6dp"
        android:layout_centerHorizontal="true"
        android:listSelector="@drawable/app_list_selector"
        android:scrollbars="none"
        android:layout_marginBottom="20dp"
        android:layout_gravity="top"
        android:drawSelectorOnTop="true"
        android:stretchMode="columnWidth"
        android:columnWidth="80dip"
        android:clickable="true"
        android:longClickable="true"
        android:theme="@style/MyEdgeOverlayTheme" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_home"
        android:scaleType="matrix"
        android:clickable="true"
        android:background="@drawable/home"
        android:cropToPadding="false"
        android:textAlignment="center"
        android:onClick="hideSelf"
        android:adjustViewBounds="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp" />
</FrameLayout>
