<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checkable="true" android:drawable="@drawable/item_select"/>
    <item android:state_checked="true" android:drawable="@drawable/item_select"/>
    <!-- 单击时的背景图片 -->
    <item android:state_pressed="true" >
        <shape>
            <!-- 设置背景填充色为黑色 -->
            <solid android:color="#0f000000"/>
            <!-- 设置边框宽度为1dp，边框颜色为白色 -->
            <stroke android:width="2dp" android:color="#ff000000" />
            <!-- 设置按钮圆角半径为5dp -->
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!--获得焦点时的图片背景-->
    <!--<item android:state_focused="true"  android:drawable="@drawable/blank" />-->
    <!-- 默认时的背景图片-->
    <item android:drawable="@drawable/blank" />
</selector>